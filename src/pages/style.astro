---
import BaseLayout from '../layouts/BaseLayout.astro'

const styles = [
	{
		name: 'Minimalist',
		title: 'Less is More',
		blurb: 'Minimalism strips away the unnecessary, focusing on clean lines, ample white space, and essential elements. Every detail serves a purpose, creating clarity and calm through restraint.',
		image: 'https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?w=800&q=80',
		class: 'minimalist',
	},
	{
		name: 'Neo-Brutalist',
		title: 'Raw and Unapologetic',
		blurb: 'Neo-brutalism takes the honesty of brutalist design and softens it with modern sensibilities. Bold borders meet playful colors, creating interfaces that are both striking and approachable.',
		image: 'https://images.unsplash.com/photo-1487958449943-2429e8be8625?w=800&q=80',
		class: 'brutalist',
	},
	{
		name: 'Bento',
		title: 'Grid Perfection',
		blurb: 'Bento design organizes content into harmonious grid layouts, inspired by Japanese bento boxes. Each section is carefully balanced, creating visual rhythm through varied sizes and thoughtful spacing.',
		image: 'https://images.unsplash.com/photo-1559056199-641a0ac8b55e?w=800&q=80',
		class: 'bento',
	},
]
---

<BaseLayout title='Style | Oct 23rd'>
	<section class='container'>
		<div class='controls'>
			<h1 class='heading'>Day 23 Style</h1>
		</div>

		{
			styles.map((style) => (
				<div class={`styled-card ${style.class}`}>
					<div class='copy'>
						<span class='style-label'>{style.name}</span>
						<p class='title'>{style.title}</p>
						<p class='blurb'>{style.blurb}</p>
					</div>
					<div class='image-container'>
						<img
							src={style.image}
							alt={`${style.name} design style`}
						/>
					</div>
				</div>
			))
		}
	</section>
</BaseLayout>

<link rel='preconnect' href='https://fonts.googleapis.com' />
<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
<link
	href='https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700&display=swap'
	rel='stylesheet'
/>

<style>
	.container {
		max-width: var(--max-content-w);
	}
	.styled-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-s);
		margin-bottom: var(--spacing-2xl);
		padding: var(--spacing-xl) var(--spacing-m);
		border-radius: var(--spacing-3xs);
		transition: transform 0.3s ease;
	}

	.styled-card:hover {
		transform: translateY(-4px);
	}

	.copy {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.style-label {
		font-size: var(--text-step--2);
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1.5px;
		margin-bottom: var(--spacing-2xs);
		display: inline-block;
	}

	.title {
		font-size: var(--text-step-2);
		font-weight: 700;
		margin-bottom: var(--spacing-m);
		line-height: 1.2;
	}

	.blurb {
		font-size: var(--text-step--1);
		line-height: 1.5;
		color: var(--black-400);
	}

	.image-container {
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		border-radius: var(--spacing-3xs);
	}

	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		max-height: 350px;
	}

	.minimalist {
		background: var(--white-200);
		color: var(--black-500);
		border: 1px solid var(--black-200);
	}

	.minimalist .style-label {
		color: var(--black-400);
	}

	.brutalist {
		background: var(--white-400);
		color: var(--black-500);
		border: 3px solid var(--black-500);
		box-shadow: 6px 6px 0 var(--black-500);
		border-radius: 0;
		position: relative;
		overflow: visible;
	}

	.brutalist::before {
		content: '';
		position: absolute;
		top: -12px;
		right: -12px;
		width: 120px;
		height: 120px;
		background: var(--orange-400);
		border: 3px solid var(--black-500);
		border-radius: 50%;
		z-index: 0;
		pointer-events: none;
	}

	.brutalist .copy {
		position: relative;
		z-index: 1;
	}

	.brutalist .style-label {
		background: var(--pink-500);
		color: var(--black-500);
		padding: var(--spacing-3xs) var(--spacing-2xs);
		border: 3px solid var(--black-500);
	}

	.brutalist .title {
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 700;
		font-size: var(--text-step-5);
		text-transform: uppercase;
		line-height: 1;
		letter-spacing: -0.5px;
	}

	.brutalist .blurb {
		font-weight: 500;
		opacity: 0.9;
		line-height: 1.7;
	}

	.brutalist .image-container {
		border: 3px solid var(--black-500);
		border-radius: 0;
		box-shadow: 6px 6px 0 var(--black-500);
		position: relative;
		z-index: 1;
		background: var(--white-200);
	}

	.brutalist:hover {
		box-shadow: 8px 8px 0 var(--black-500);
		transform: translateY(-2px);
	}

	.brutalist:hover .image-container {
		box-shadow: 8px 8px 0 var(--black-500);
	}

	.brutalist:hover::before {
		transform: scale(1.05);
		transition: transform 0.3s ease;
	}

	.bento {
		background: var(--orange-50);
		color: var(--black-500);
		position: relative;
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: var(--spacing-xs);
		padding: var(--spacing-xl);
	}

	.bento .copy {
		display: flex;
		flex-direction: column;
		justify-content: end;
		gap: var(--spacing-2xs);
		grid-column: 1/3;
	}

	.bento .style-label {
		background: var(--black-500);
		color: var(--white-200);
		padding: var(--spacing-3xs) var(--spacing-xs);
		border-radius: var(--spacing-3xs);
		width: fit-content;
		margin-bottom: 0;
	}

	.bento .title {
		color: var(--black-500);
		background: var(--orange-100);
		padding: var(--spacing-xs);
		margin-bottom: 0;
		width: fit-content;
		border-radius: var(--spacing-3xs);
		border: 1px solid var(--orange-500);
	}

	.bento .blurb {
		background: var(--orange-100);
		padding: var(--spacing-xs);
		border-radius: var(--spacing-3xs);
		color: var(--black-400);
		border: 1px solid var(--orange-500);
	}

	.bento .image-container {
		grid-column: 3 / 5;
		border: 1px solid var(--orange-500);
		border-radius: var(--spacing-3xs);
		background: var(--white-400);
		position: relative;
	}

	@media (max-width: 768px) {
		.styled-card {
			grid-template-columns: 1fr;
			gap: 1.5rem;
			padding: 1.5rem;
		}

		.title {
			font-size: 1.5rem;
		}

		.brutalist {
			overflow: hidden;
			box-shadow: 4px 4px 0 var(--black-500);
		}

		.brutalist:hover {
			box-shadow: 4px 4px 0 var(--black-500);
		}

		.brutalist::before {
			width: 60px;
			height: 60px;
			top: var(--spacing-xs);
			right: var(--spacing-xs);
		}

		.brutalist .title {
			font-size: var(--text-step-3);
		}

		.brutalist .image-container {
			box-shadow: 4px 4px 0 var(--black-500);
		}

		.brutalist:hover .image-container {
			box-shadow: 4px 4px 0 var(--black-500);
		}

		.bento {
			grid-template-columns: 1fr;
			grid-template-rows: auto;
			gap: var(--spacing-s);
		}

		.bento .copy,
		.bento .blurb,
		.bento .image-container {
			grid-column: 1;
		}
	}
</style>
